<h2>Edit Post:</h2>


<form action="/posts/<%= @post.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    Trick: <input type="text" name="trick_to_learn" value="<%= @post.trick_to_learn %>"><br>
    Description: <textarea name="description"><%= @post.description %></textarea><br>
    Accomplished: <input type="text" name="accomplished" value="<%= @post.accomplished%>"><br>
    <input type="submit" value="Post">

</form>

<form action="/posts/<%= @post.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Post">
</form>